header
  style
    body {
      font-family: sans-serif;
    }

    .cell {
      border: solid 1px white;
      overflow: hidden;
      position: absolute;
      text-indent: 2px;
      font-sze: 10px;
    }

    .cell.relation {
      font-size: 15px;
      pointer-events: none;
      color: #525452;
      z-index: 1;
    }

    .cell.topic {
      font-size: 10px;
      color: white;
      white-space: nowrap;
      text-overflow: ellipsis;
      opacity: 0.7;
      cursor: pointer !important;
    }

    #pop-over {
      position: fixed;
      z-index: 2;
      background-color: black;
      opacity: 0.7;
      color: white;
      padding: 5px 20px 10px 20px;
      right: 0px;
      max-width: 500px
    }

